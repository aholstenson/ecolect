{
  "parser": "babel-eslint",
	"plugins": [
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
		"plugin:import/warnings"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {},
  "rules": {
    "strict": [ "error", "global" ],
    "no-irregular-whitespace": 2,
    "quotes": [
      2,
      "single"
    ],
    "no-unused-vars": [
      "error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }
    ],
    "eqeqeq": [ "error" ],
    "no-throw-literal": [ "error" ],
    "semi": [ "error", "always" ]
  }
}
